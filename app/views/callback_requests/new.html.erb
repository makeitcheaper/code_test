<%= tag.h2 "New Callback Request" %>

<%= simple_form_for @callback_request do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :business_name, required: true %>
  <%= f.input :telephone_number, required: true %>
  <%= f.input :email, required: true %>
  <%= f.input :notes %>
  <%= f.submit "Send" %>
<% end %>

<h1>Callback</h1>
<p> <%= form_for(@client) do |f| %>
      <%= render 'layouts/client_error_messages.html' %>

      <%= f.label :full_name %>
      <%= f.text_field :full_name, class: 'form-control' %>

      <%= f.label :business_name %>
      <%= f.text_field :business_name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :tel_num %>
      <%= f.telephone_field :tel_num, class: 'form-control' %>

      <%= f.submit "Callback", class: "btn btn-primary" %>
    <% end %>
</p>
